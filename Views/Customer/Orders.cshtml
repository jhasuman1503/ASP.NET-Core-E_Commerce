@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Orders";
}

<h2>My Orders</h2>

@if (TempData["OrderPlacedMessage"] != null)
{
    <div class="alert alert-success" role="alert" style="text-align: center;">
        <strong>@TempData["OrderPlacedMessage"]</strong>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="orders-section">
        @foreach (var order in Model)
        {
            <div class="order-item">
                <h4>@order.ProductName</h4>
                <img src="~/product_images/@order.ProductImage" alt="@order.ProductName" width="150" height="150" />
                <p>Quantity: @order.Order.quantity</p>
                <p>Total Price: @order.Order.total_price.ToString("C")</p>
                <p>Order Date: @order.Order.order_date.ToShortDateString()</p>
                <p>Status: @order.Order.order_status</p>
            </div>
        }
    </div>
}
else
{
    <p>No orders found.</p>
}

<a asp-action="Index" class="btn btn-primary">Continue Shopping</a>
