<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
   
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>

@{
    var userType = Context.Session.GetString("UserIs");
}
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">

        <a class="navbar-brand ps-3" href="">Shopping Cart</a>

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>

        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
            </div>
        </form>

        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("profile","Admin")">Profile</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("logout" , "Customer")">Logout</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (!string.IsNullOrEmpty(userType))
                        {
                           if(userType=="Customer")
                            {
                                <a class="nav-link" href="@Url.Action("Index", "Customer")">
                                    <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                                    Home
                                </a>

                                <a class="nav-link" href="@Url.Action("ViewCart", "Customer")">
                                    <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                                    Cart
                                </a>
                                <a class="nav-link" asp-controller="Customer" asp-action="Orders">
                                    <div class="sb-nav-link-icon"><i class="fas fa-money-check"></i></div>
                                    Orders
                                </a>
                            }else if (userType=="Admin")
                            {
                                <a class="nav-link" href=@Url.Action("home","Admin")>
                                    <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                    Home
                                </a>
                                <a class="nav-link" href="@Url.Action("profile","Admin")">
                                    <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                                    Profile
                                </a>

                                <a class="nav-link" href="@Url.Action("fetchCustomer","Admin")">
                                    <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                    Customer
                                </a>
                                <a class="nav-link" href="@Url.Action("fetchCategory","Admin")">
                                    <div class="sb-nav-link-icon"><i class="fas fa-list"></i></div>
                                    Category
                                </a>
                                <a class="nav-link" href="@Url.Action("fetchProduct","Admin")">
                                    <div class="sb-nav-link-icon"><i class="fas fa-shopping-basket"></i></div>
                                    Products
                                </a>
                            }
                        }
                        else
                        {
                            <p>Please log in to explore more.</p>
                        }
                       






                    </div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div>
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; 2024. Design & Developed By Suman Kumar Jha</div>
                    </div>
                </div>
            </footer>
        </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/js/scripts.js"></script>


</body>
</html>